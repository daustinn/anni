{
  "name": "anni",
  "version": "1.1.26",
  "description": "Simple, beautiful, and easy-to-use notification system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "source": "./src/index.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "dev": "bunchee --watch",
    "start": "pnpm --filter=website start",
    "type-check": "tsc --noEmit",
    "dev:website": "turbo run dev --filter=website",
    "build:anni": "tsc && esbuild dist/**/*.js --minify --outdir=dist --allow-overwrite && esbuild src/styles.css --minify --outfile=dist/styles.css",
    "deploy": "pnpm -w run build:anni && pnpm turbo run build --filter=website && pnpm --filter=website start"
  },
  "files": [
    "dist",
    "dist/index.d.ts",
    "dist/index.js"
  ],
  "keywords": [
    "notifications",
    "react",
    "ui",
    "component",
    "css",
    "toast",
    "nextjs"
  ],
  "author": "David Bendez√∫ <hi@daustinn.com>",
  "license": "MIT",
  "homepage": "https://daustinn.com/anni",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daustinn/anni.git"
  },
  "bugs": {
    "url": "https://github.com/daustinn/anni/issues"
  },
  "type": "module",
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "@radix-ui/react-toast": "^1.2.4",
    "bunchee": "^6.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@swc/core": "^1.11.12",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "eslint": "^9.23.0",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^16.0.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "tsup": "^8.4.0",
    "turbo": "^2.4.4",
    "typescript": "^4.3.5",
    "typescript-eslint": "^8.27.0"
  },
  "packageManager": "pnpm@10.6.5",
  "workspaces": [
    "website",
    "."
  ]
}
